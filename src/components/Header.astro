---
import DownArrow from "./DownArrow.astro";
import ProfileImage from "./ProfileImage.astro";
import SocialLink from "./SocialLink.astro";
import Bullet from "./Bullet.astro";
import { Home } from "../scripts/models/home";

interface Props {
	home: Home;
}

const { home } = Astro.props;
---
	<div
		class="flex flex-wrap items-center h-auto max-w-7xl mx-auto my-8 mt-24 mb-10 lg:h-144 lg:mx-10 xl:mx-auto lg:my-18 xl:my-12"
	>
		<div
			id="profile"
			class="order-2 w-full pt-32 mx-6 bg-white rounded-lg lg:w-3/5 md:rounded-r-lg lg:rounded-l-lg xl:rounded-r-none dark:bg-mirage dark:text-iron lg:mx-0 lg:order-1 -mt-36 md:-mt-40 md:pt-28 lg:-mt-0 lg:pt-0 shadow-2xl-black"
		>
			<div class="p-4 md:p-12 flex flex-col justify-start">
				<div class="flex flex-col items-center w-full lg:items-start">
					<h1 class="mt-6 text-2xl font-extrabold tracking-tighter lg:mt-3 sm:text-3xl md:text-4xl lg:text-6xl xl:text-7xl">
						{home.title}
					</h1>
					<h2 class="mb-5 text-2xl font-extrabold tracking-tighter md:mb-8 md:text-3xl lg:text-4xl sm:text-3xl">
						<a
							class="text-black dark:text-pale hover:text-black"
							href={home.githubUrl}
							target="_blank"
							rel="noopener"
							title="@garpunkal"
							aria-label="@garpunkal"
						>
							{home.subTitle}
						</a>
					</h2>
					{
						home.specialisms
							.filter((x) => x.displayComponent)
							.map((specialism) => (
								<Bullet
									title={specialism.title}
									cssclass={specialism.cssClass}
									svgPath={specialism.svgPath}
									stroke={specialism.svgStroke}
									strokeWidth={specialism.svgStrokeWidth}
									fill={specialism.svgFill}
									url={specialism.url}
								/>
							))
					}
				</div>

				<div class="w-full mt-10 mb-3 flex flex-wrap justify-center md:justify-between">
					{
						home.socials
							.filter((x) => x.displayComponent)
							.map((social) => (
								<SocialLink href={social.url} title={social.title} svgPath={social.svgPath} rel={social.rel} />
							))
					}
				</div>
			</div>
		</div>
		<div class="z-10 order-1 w-full -mt-16 lg:w-2/5 lg:order-2 lg:mt-2">
			<ProfileImage image={home.image} />
		</div>
		<div class="flex justify-center order-3 w-full pt-10 md:pt-10 lg:pt-6">
			<DownArrow anchor="projects" />
		</div>
	</div>
