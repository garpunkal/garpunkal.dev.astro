---
import { Picture } from "astro:assets";
import { Experience } from "../scripts/models/experience";
import { GetMonthYear, GetMonths } from "../scripts/utils.ts";
interface Props {
	experience: Experience;
}

const { experience } = Astro.props;
---
<div class="flex flex-row flex-wrap w-full">
	<div
		class="flex justify-center w-full mb-2 rounded-lg ring-ocean dark:ring-mirage ring-4 dark:brightness-50 dark:hover:brightness-100"
		style={"background-color:" + experience.logo.background + ";background-size:auto;"}
	>
		{
			experience.url ? (
				<a
					href={experience.url}
					target="_blank"
					rel="noopener"
					title={experience.title}
					class="flex justify-center w-full h-full"
				>
					<Picture
						src={experience.logo.url}
						formats={["webp"]}
						widths={[100]}
						alt={experience.logo.alt}
						class="flex object-contain rounded-lg lg:rounded-l-lg w-100pixel h-100pixel"
						loading="lazy"
						title={experience.logo.alt}
						width="100"
						height="100"
						style={"backgroundColor:" + experience.logo.background}
					/>
				</a>
			) : (
				<Picture
					src={experience.logo.url}
					formats={["webp"]}
					widths={[100]}
					alt={experience.logo.alt}
					class="flex object-contain rounded-lg lg:rounded-l-lg w-100pixel h-100pixel"
					loading="lazy"
					title={experience.logo.alt}
					width="100"
					height="100"
					style={"backgroundColor:" + experience.logo.background}
				/>
			)
		}
	</div>
	<div class="w-full h-full mt-2">
		<div class="w-full">
			<h3 class="mb-1 text-xl font-bold text-white dark:text-santa-grey">
				{experience.job}
			</h3>
			<h4 class="mb-1 text-lg text-iron dark:text-santa-grey">
				{experience.title}
			</h4>
			<p class="mt-4 text-sm text-white font-smaller">
				{
					experience.isCurrent ? (
						<span class="inline-block px-4 py-2 my-1 text-sm text-white uppercase rounded bg-ocean dark:text-iron dark:bg-ocean last:mr-0">
							CURRENT
						</span>
					) : (
						<span class="inline-block px-4 py-2 my-1 text-sm text-white uppercase bg-gray-800 rounded dark:text-pale-sky dark:bg-gray-800 last:mr-0">
							{GetMonthYear(experience.to)}
						</span>
					)
				}
				 -
				<span
					class="inline-block px-4 py-2 my-1 text-sm text-white uppercase bg-gray-800 rounded dark:text-pale-sky dark:bg-gray-800 last:mr-0"
					>{GetMonthYear(experience.from)}</span
				>
			</p>
			{
				GetMonths(experience.from, experience.to) != "0 months" ? (
					<div class="inline-block px-1 py-1 text-xs text-santa-grey dark:text-pale-sky">
						{GetMonths(experience.from, experience.to)}
					</div>
				) : (
					<div />
				)
			}
		</div>
	</div>
</div>
