---
interface Props {
	title: string;
	svgPath: string;
	strokeWidth: string;
	stroke: string;
	fill: string;
	cssclass: string;
}

const { title, svgPath, strokeWidth, stroke, fill, cssclass } = Astro.props;
---

<div class="flex flex-col w-full gap-1 text-sm text-davy-grey dark:text-iron lg:text-sm">
	<div class="flex flex-row items-center justify-start w-full md:justify-center lg:justify-start">
		<svg xmlns="http://www.w3.org/2000/svg"
		 class={"flex flex-grow-0 flex-shrink-0" + (cssclass || "h-6 w-6 fill-current text-ocean dark:text-ocean p-1")} 
		 stroke-width={strokeWidth} stroke={stroke} fill={fill || "currentColor"}
		 role="img" viewBox="0 0 24 24"
		 height="24"
		 width="24">
			<title>{title}</title>
			<path d={svgPath}></path>
		</svg>
		<span class="flex-shrink pl-1">
			{title}
		</span>
	</div>
</div>