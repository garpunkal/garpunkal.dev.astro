---
import { Picture } from "astro:assets";
import { Project } from "../scripts/models/project";
interface Props {
	project: Project;
	large: boolean;
}

const { project, large } = Astro.props;
---
<figure class="relative" role="none">
	{
		project.position === "left top" ? (
			<Picture
				src={project.image.url}
				formats={["webp"]}
				widths={[128, 156, 170, 232, 298, 317, 327, 403, 604, 930]}
				alt={"screenshot of " + project.image.alt}
				class="block object-left-top w-full h-full object-cover dark:brightness-75 dark:hover:brightness-100 rounded-lg "
				loading="lazy"
				title={project.image.alt}
				width={large ? 930 : 223}
				height={large ? 496 : 164}
			/>
		) : (
			<Picture
				src={project.image.url}
				formats={["webp"]}
				widths={[128, 156, 170, 232, 298, 317, 327, 403, 604, 930]}
				alt={"screenshot of " + project.image.alt}
				class="block object-top w-full h-full object-fit dark:brightness-75 dark:hover:brightness-100 rounded-lg"
				loading="lazy"
				title={project.image.alt}
				width={large ? 930 : 223}
				height={large ? 496 : 164}
			/>
		)
	}
	<figcaption
		class="absolute px-2 py-1 text-white left-0 bottom-0 md:px-4 md:py-2 bg-ocean dark:bg-mirage dark:text-cool rounded-bl-lg rounded-tr-lg text-sm "
	>
		{project.title}
	</figcaption>
</figure>
