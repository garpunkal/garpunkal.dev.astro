---
interface Props {
	title: string;
	subTitle: string;
	url: string;
	urlTitle: string;
	urlText: string;
}

const { title, subTitle, url, urlTitle, urlText } = Astro.props;
---

<div
	class="flex flex-wrap items-center h-auto max-w-6xl mx-auto mt-20 mb-10 lg:mx-10 xl:mx-auto md:my-12 lg:my-18"
>
	<div		
		class="w-full mx-6 bg-white rounded-lg  lg:w-3/5 md:rounded-r-lg lg:rounded-l-lg dark:bg-mirage dark:text-iron lg:mx-0"
	>
		<div class="p-4 text-center md:p-12 lg:text-left">
			<h1 class="mt-3 text-4xl font-extrabold tracking-tighter sm:text-6xl lg:text-6xl text-ocean dark:text-iron">
				{title}
			</h1>
			<h2
				class="mb-5 text-2xl font-extrabold tracking-tighter md:mb-8 sm:text-3xl lg:text-4xl text-mirage dark:text-pale"
			>
				{subTitle}
			</h2>
			{
				url ? (
					<h3 class="mb-5 font-extrabold tracking-tighter text-pale underline md:mb-8 text-1xl sm:text-1xl lg:text-2xl dark:text-pale">
						<a href={url} title={urlTitle}>{urlText}</a>
					</h3>
				) : (
					<span />
				)
			}
		</div>
	</div>
</div>
